<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.VaultPage">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="LayoutOptions.Center"
            Margin="0,150"
            Spacing="25">

            <Label Text="Welcome to the password vault!" FontSize="20" />

            <Button
                x:Name="LogOutBtn"
                Text="Log out" 
                Clicked="OnLogOut" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
